---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <slot name="title" />
  <section class="hero">
    <h1>Hi, I'm Esteban</h1>
    <p>
      This is my personal platform â€” accessible. Explore my work, background,
      and feel free to get in touch.
    </p>
    <a href="/cv" class="cta-button">View My CV</a>
  </section>

  <style>
    .hero {
      padding: 4rem 1rem;
      text-align: center;
    }

    .hero h1 {
      font-size: 2.5rem;
      color: var(--color-primary);
    }

    .hero p {
      font-size: 1.25rem;
      margin-top: 1rem;
      color: var(--color-gray);
    }

    .cta-button {
      display: inline-block;
      margin-top: 2rem;
      padding: 0.75rem 1.5rem;
      background-color: var(--color-secondary);
      color: white;
      text-decoration: none;
      border-radius: 0.5rem;
      transition: background-color 0.3s ease;
    }

    .cta-button:hover {
      background-color: var(--color-accent);
    }
  </style>
</MainLayout>
